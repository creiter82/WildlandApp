<!-- Button trigger modal -->
<%= button_tag('New Deployment', 'data-toggle': 'modal', 'data-target': '#rosterModal', class: 'btn btn-outline-primary') %> 

<!-- Modal -->
<div class="modal fade" id="rosterModal" tabindex="-1" role="dialog" aria-labelledby="rosterModalLabel" aria-hidden="true">
  <div class="modal-lg modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="rosterModalLabel">New Deployment</h5>
        <%= button_tag(fa_icon("times", class: 'fa-lg'), 'data-dismiss': 'modal', 'aria-label': 'Close', class: 'close') %>
      </div>
      <div class="modal-body">
        <%= render "deployments/form", deployment: @deployment %>
      </div>
    </div>
  </div>
</div>