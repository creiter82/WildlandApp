<div class="container roster-container">  
  <h1>
    Roster for the <%= @roster.name.capitalize %><br />
    <small>Roster Dates: <%= @roster.start_date.strftime("%m/%d/%Y") %> - <%= @roster.end_date.strftime("%m/%d/%Y") %></small>
  </h1>

  <%= link_to fa_icon("arrow-left", class: 'fa-lg'), rosters_path %>
  <%= link_to fa_icon("pencil-square-o", class: 'fa-lg'), edit_roster_path(@roster), class: 'edit-btn' %>
  

  <div class="row roster-card">
    
    <%= render 'position_availability', title: 'Engine Bosses', position_type: current_user.is_engine_boss?, position: @engine_boss, users: @engine_bosses %>  

    <%= render 'position_availability', title: 'Firefighters', position_type: !current_user.is_engine_boss?, position: @firefighter, users: @ffs %>

  </div>

  <%= render 'deploy_modal' if logged_in?(:admin) %>

</div>  
