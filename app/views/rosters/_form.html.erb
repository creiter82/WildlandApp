    <ul>
    <% roster.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <div class="col-md-6">
    <%= form_for(roster, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <% if roster.name %>
        <div class="form-group row">
          <%= f.label :name, class: 'col-sm-4 control-label' %>
          <div class="col-6">
          <%= f.text_field :name, value: @roster.name.capitalize, class: 'form-control', readonly: true %>
          </div>
        </div>
      <% end %>
      <div class="form-group row">
        <%= f.label :start_date, class: 'col-sm-4 control-label' %>
        <div class="col-6">
          <%= f.text_field :start_date, placeholder: '2017-09-18', class: 'form-control', id: 'start_time' %>
        </div>  
      </div>

      <div class="form-group row">
        <%= f.submit class: "btn btn-sm btn-outline-primary" %>
      </div>
    <% end %>
  </div>  
  
