<div class="container">
  <h1>Rosters</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rosters.each do |roster| %>
        <tr>
          <td><%= roster.name.capitalize %></td>
          <td><%= roster.start_date.strftime("%m/%d/%Y") %></td>
          <td><%= roster.end_date.strftime("%m/%d/%Y") %></td>
          <td><%= link_to 'Show', roster %></td>
          <td><%= link_to 'Edit', edit_roster_path(roster) %></td>
          <td><%= link_to 'Destroy', roster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Roster', new_roster_path %>
</div>  
