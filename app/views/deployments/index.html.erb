<div class="container">  
  <h1>Deployments</h1>

  <div class="row">
    <% @deployments.each do |deployment| %>
      <div class="col-md-4">
        <div class="card w-100">
          <div class="card-body">
            <h4 class="card-title"><%= deployment.name.titleize %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= deployment.location.titleize %></h6>
            <p class="card-text">
              <strong>Personnel:</strong>
              <% if deployment.users.count > 0 %>
                <% deployment.users.each do |user| %>
                  <%= user.name.titleize %>
                <% end %>
              <% end %>
            </p>
            <%= link_to 'View', deployment, class: 'btn btn-sm btn-outline-success' %>
            <%= link_to 'Edit', edit_deployment_path(deployment), class: 'btn btn-sm btn-outline-warning' %>
            <%= link_to 'Destroy', deployment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
          </div>
        </div>
      </div>  
    <% end %>
  </div>  
</div>  
