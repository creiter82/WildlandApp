<!DOCTYPE html>
<html>
  <head>
    <title>WildlandApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <%= link_to(image_tag("AFR_Logo_Small.png", height: '100'), root_url, 
                                                  class: "pull-left logo") %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto nav-padding-left">
          <li class="nav-item">
            <%= link_to 'Personnel', users_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Quals', certifications_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Rosters', rosters_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Deployments', deployments_path, class: 'nav-link' %>
          </li>
        </ul>
        <ul class="navbar-nav mt-2 mt-md-0">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to current_user.name.titleize, user_path(current_user.id), class: 'nav-link' %>
            </li>  
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
            </li>  
          <% else %>
            <li class="nav-item">
              <%= link_to 'Register', new_user_registration_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">  
              <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline-primary' %>
            </li>  
          <% end %>
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>   

    <%= yield %>
  </body>
</html>
