<div class="container">  
  <h1>Qualifications</h1>

  <div>
    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th>Name</th>
          <th>Acronym</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @certs.each do |cert| %>
          <tr>
            <td><%= cert.name.titleize %></td>
            <td><%= cert.acronym.upcase %></td> 
            <td>
              <%= link_to 'Edit', edit_certification_path(cert) %>
              <%= link_to 'Delete', certification_path(cert),
                                                method: :delete,
                                                data: { confirm: "Are you sure you want to delete \'#{cert.name.titleize}'?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Qual', new_certification_path, class: 'btn btn-outline-primary' %>

  </div>
</div>  
