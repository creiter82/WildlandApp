<%= form_for(@cert, :html => {class: "form-horizontal", role: "form"}) do |f| %>

  <div class="form-row">

    <div class="form-group col-md-6">
      <%= f.label :name, class: 'col-form-label' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>
    
  </div>

  <div class="form-row">

    <div class="form-group col-md-6">
      <%= f.label :acronym, class: 'col-form-label' %>
      <%= f.text_field :acronym, class: 'form-control' %>
    </div>  

  </div>

  <div class="actions">
    <div class="form-group">
      <%= f.submit class: 'btn-outline-success' %>
    </div>  
  </div>

<% end %>

<%= link_to 'Back', :back %>