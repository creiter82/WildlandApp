<div class="container">  
  <h1>Team Member List</h1>

  <div>
    <table class="table table-hover">
      <thead class="thead-default">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Shift</th>
          <th>Quals</th>
          <th>Deployments</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name.titleize %></td>
            <td><%= number_to_phone(user.phone, area_code: true) %></td>
            <td><%= user.email %></td>
            <td class="<%= user.shift %>"><%= user.shift %></td>
            <td>
              <%= render 'shared/user_quals', user: user %>
            </td>
            <td>
              <%= user.deployments.from_this_year.count %>
            </td>  
            <td>
              <%= link_to 'View', user_path(user) %>
              <% if current_user == user %>
                <%= link_to 'Edit', edit_user_path(user) %>
              <% end %>
              <%= link_to 'Delete', user_path(user),
                                                method: :delete,
                                                data: { confirm: "Are you sure you want to delete \'#{user.name.titleize}'?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>  